{
  "manifest_version": 3,
  "name": "Performance Insight",
  "version": "1.0.0",
  "description": "Analyze and visualize your websiteâ€™s Core Web Vitals (LCP, INP, CLS, FCP, TTFB) in real-time",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/speedometer_16.png",
      "64": "icons/speedometer_64.png",
      "128": "icons/speedometer_128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["web-vital-bundle-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["scripting", "activeTab", "storage", "webNavigation"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
